{
  "name": "groupie",
  "version": "0.0.1",
  "description": "A framework for following Ethereum smart contract events and making them available locally via lmdb.",
  "main": "src/cron.mjs",
  "scripts": {
    "dev": "DEBUG=@attestate/* node src/launch.mjs",
    "test": "ava"
  },
  "author": "Tim Daubensch√ºtz <tim@daubenschuetz.de> (https://proofinprogress.com/)",
  "license": "UNLICENSED",
  "dependencies": {
    "@attestate/crawler": "0.0.1",
    "@attestate/crawler-call-block-logs": "0.2.1",
    "debug": "4.3.4",
    "eth-fun": "0.9.2",
    "lmdb": "2.7.6"
  },
  "devDependencies": {
    "ava": "5.1.0"
  },
  "ava": {
    "environmentVariables": {
      "DEBUG": "@attestate*",
      "RPC_HTTP_HOST": "https://cloudflare-eth.com",
      "RPC_API_KEY": "",
      "DATA_DIR": "data",
      "EXTRACTION_WORKER_CONCURRENCY": "12",
      "IPFS_HTTPS_GATEWAY": "https://cloudflare-ipfs.com/ipfs/",
      "ARWEAVE_HTTPS_GATEWAY": "https://arweave.net"
    },
    "require": [
      "dotenv/config"
    ]
  }
}
